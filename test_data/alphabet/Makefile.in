################################
# 
# Testing
# 

check: nonsense

installcheck: nonsense

.PHONY: check_copyrights
check_copyrights: ${SRC_FILES}
	@EXIT=0 ; 								\
	for f in ${SRC_FILES} ; do						\
		if grep -q -i copyright $${f} ; then 				\
			: ; 							\
		else 								\
			echo "$${f} looks like it is missing a copyright" ; 	\
			EXIT=1 ; 						\
		fi ; 								\
	done ; 									\
	exit ${EXIT}

